                <DropShadow />
            </effect>
            Ajouter cours
        </Button>
        <TextArea fx:id="txtDescriptionCommentaire" layoutX="286.0" layoutY="143.0" prefHeight="77.0" prefWidth="200.0" promptText="Description Commentaire" />
        <Text fill="white" layoutX="199.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Modifier Commentaire">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Text>
        <ComboBox fx:id="forum_id" layoutX="286.0" layoutY="243.0" prefHeight="26.0" prefWidth="200.0" />
        <Text fill="white" layoutX="115.0" layoutY="257.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Forum" />
      <ImageView fitHeight="104.0" fitWidth="162.0" layoutX="-6.0" layoutY="-3.0" pickOnBounds="true" preserveRatio="true">
