<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="tf_NomMatiere" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ajouterEvaluationController">

   <children>
      <!-- Logo en haut à gauche -->
      <ImageView fitHeight="45.0" fitWidth="70.0" layoutX="10.0" layoutY="10.0">
         <image>
            <Image url="@images/1.png" />
         </image>
      </ImageView>

      <!-- Nom de la matière -->
      <Text layoutX="212.0" layoutY="67.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Titre : " />
      <TextField fx:id="Titre" layoutX="190.0" layoutY="85.0" prefWidth="200.0" />

      <!-- Date de début -->
      <Text layoutX="210.0" layoutY="136.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date Limite : " />
      <DatePicker fx:id="DateLimite" layoutX="190.0" layoutY="152.0" prefWidth="200.0" />

      <!-- Date de fin -->
      <Text layoutX="209.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Durée :" />

      <!-- Bouton "Ajouter cour" -->
      <Button fx:id="AjouterEvaluation" layoutX="217.0" layoutY="267.0" mnemonicParsing="false" onAction="#AjouterEvaluation" prefHeight="29.0" prefWidth="134.0" text="Ajouter évaluation">
         <style>
            -fx-background-color: #3498db;
            -fx-text-fill: white;
         </style>
         <effect>
            <DropShadow />
         </effect>
         Ajouter cour
      </Button>

      <!-- Bouton "Retour" -->
      <Button fx:id="Retour" layoutX="217.0" layoutY="326.0" mnemonicParsing="false" onAction="#Retour" prefHeight="29.0" prefWidth="134.0">
         <style>
            -fx-background-color: #3498db;
            -fx-text-fill: white;
         </style>
         <effect>
            <DropShadow />
         </effect>
         Retour
      </Button>
      <ImageView fitHeight="29.0" fitWidth="32.0" layoutX="184.0" layoutY="267.0">
         <image>
            <Image url="@images/add_icon.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="35.0" fitWidth="32.0" layoutX="184.0" layoutY="323.0">
         <image>
            <Image url="@images/back_icon.png" />
         </image>
      </ImageView>
      <TextField fx:id="Duree" layoutX="190.0" layoutY="215.0" prefWidth="200.0" />
   </children>
</AnchorPane>
