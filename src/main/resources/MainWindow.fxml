<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainWindowController">
   <children>
      <!-- Logo -->
      <ImageView fitHeight="65.0" fitWidth="108.0">
         <image>
            <Image url="@images/1.png" />
         </image>
      </ImageView>

      <!-- Titre -->
      <Text layoutX="123.0" layoutY="86.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SmartSteps - Gestion des Cours" wrappingWidth="500.0">
         <font>
            <Font size="24.0" />
         </font>
      </Text>

      <!-- Boutons -->
      <Button fx:id="ajouterCourButton" layoutX="194.0" layoutY="140.0" mnemonicParsing="false" onAction="#AjouterCour" prefHeight="40.0" prefWidth="200.0">
         <style>
            -fx-background-color: #3498db;
            -fx-background-radius: 5px;
            -fx-border-radius: 5px;
            -fx-text-fill: white;
            -fx-padding: 8px 16px;
         </style>
         Ajouter un Cours
      </Button>
      <Button fx:id="modifierCourButton" layoutX="194.0" layoutY="200.0" mnemonicParsing="false" onAction="#ModifierCour" prefHeight="40.0" prefWidth="200.0">
         <style>
            -fx-background-color: #3498db;
            -fx-background-radius: 5px;
            -fx-border-radius: 5px;
            -fx-text-fill: white;
            -fx-padding: 8px 16px;
         </style>
         Modifier un Cours
      </Button>
      <Button fx:id="afficherCourButton" layoutX="194.0" layoutY="257.0" mnemonicParsing="false" onAction="#AfficherCour" prefHeight="40.0" prefWidth="200.0">
         <style>
            -fx-background-color: #3498db;
            -fx-background-radius: 5px;
            -fx-border-radius: 5px;
            -fx-text-fill: white;
            -fx-padding: 8px 16px;
         </style>
         Afficher List Cour
      </Button>
      <Button fx:id="Retour" layoutX="194.0" layoutY="317.0" mnemonicParsing="false" onAction="#Retour" prefHeight="40.0" prefWidth="200.0">
         <style>
            -fx-background-color: #3498db;
            -fx-background-radius: 5px;
            -fx-border-radius: 5px;
            -fx-text-fill: white;
            -fx-padding: 8px 16px;
         </style>
         Retour
      </Button>
   </children>
</AnchorPane>
