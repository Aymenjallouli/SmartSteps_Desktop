<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.animation.FadeTransition?>
<?import javafx.util.Duration?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #e0e0e0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainWindowController">
   <children>
      <!-- Logo -->
      <ImageView fitHeight="100.0" fitWidth="162.0" layoutX="219.0" layoutY="50.0">
         <image>
            <Image url="@images/1.png" />
         </image>
      </ImageView>

      <!-- Titre -->
      <Text layoutX="123.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SmartSteps - Gestion des Cours" wrappingWidth="500.0">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Text>

      <!-- Boutons avec animation -->
      <Button fx:id="PROF" layoutX="194.0" layoutY="250.0" mnemonicParsing="false" onAction="#PROF" prefHeight="40.0" prefWidth="200.0" text="PROF">
         <style>
            -fx-background-color: linear-gradient(to bottom, #3498db, #2980b9);
            -fx-background-radius: 5px;
            -fx-border-radius: 5px;
            -fx-text-fill: white;
            -fx-padding: 8px 16px;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);
         </style>
         <text>
            <Text text="Afficher Liste Cours" />
         </text>

      </Button>
      <Button fx:id="Etudiant" layoutX="194.0" layoutY="331.0" mnemonicParsing="false" onAction="#Etudiant" prefHeight="40.0" prefWidth="200.0" text="ETUDIANT">
         <style>
            -fx-background-color: linear-gradient(to bottom, #3498db, #2980b9);
            -fx-background-radius: 5px;
            -fx-border-radius: 5px;
            -fx-text-fill: white;
            -fx-padding: 8px 16px;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);
         </style>
         <text>
            <Text text="Retour" />
         </text>

      </Button>
   </children>
</AnchorPane>
