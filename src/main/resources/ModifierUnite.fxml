                <Label fx:id="lblSelectedCour" />
            </children>
        </VBox>

        <Text fill="#150eda" fontSmoothingType="LCD" layoutX="306.0" layoutY="171.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MODIFIER UNITE" wrappingWidth="354.13671875">
            <font>
                <Font size="44.0" />
            </font>
        </Text>

        <!-- Bouton d'ajout -->
        <Button layoutX="746.0" layoutY="320.0" onAction="#ModifierUnite" prefHeight="33.0" prefWidth="146.0" style="-fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF); -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-text-fill: #1B365D; -fx-padding: 8px 16px;" text="Modifier Unite" />

        <Button fx:id="Retour" layoutX="10.0" layoutY="320.0" onAction="#Retour" prefHeight="33.0" prefWidth="146.0" style="-fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF); -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-text-fill: #1B365D; -fx-padding: 8px 16px;" text="Retour" />

        <Button layoutX="531.0" layoutY="431.0" onAction="#importFiles" prefHeight="33.0" prefWidth="173.0" style="-fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF); -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-text-fill: #1B365D; -fx-padding: 8px 16px;" text="Importer des fichiers" />
        <ImageView fitHeight="29.0" fitWidth="32.0" layoutX="746.0" layoutY="322.0">
            <image>
                <Image url="@images/update.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="30.0" fitWidth="32.0" layoutX="14.0" layoutY="322.0">
            <image>
                <Image url="@images/back.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="92.0" fitWidth="262.0" layoutX="319.0" layoutY="25.0">
            <image>
                <Image url="@images/1.png" />
            </image>
        </ImageView>
      <ImageView fitHeight="30.0" fitWidth="26.0" layoutX="531.0" layoutY="433.0">
         <image>
            <Image url="@images/Import.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
