<AnchorPane prefHeight="400.0" prefWidth="628.0" style="-fx-background-color: linear-gradient(to bottom, #3b5998, #1B365D);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ModifierUniteController">
    <children>
        <!-- Logo -->
        <ImageView fitHeight="600" fitWidth="900">
            <Image url="@images/Background.png" />
