            <children>
                <!-- Numéro d'unité -->
                <TextField fx:id="numUniteField" promptText="Numéro d'unité" />

                <!-- Titre -->
                <TextField fx:id="titreField" promptText="Titre" />

                <!-- Statut -->
                <ChoiceBox fx:id="statutField" prefHeight="25.0" prefWidth="501.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="EN COURS" />
                            <String fx:value="A FAIRE" />
                            <String fx:value="TERMINÉ" />
                        </FXCollections>
                    </items>
                </ChoiceBox>

                <!-- Contenu -->
                <TextArea fx:id="contenuField" prefHeight="100.0" promptText="Contenu" />

