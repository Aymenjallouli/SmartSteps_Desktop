<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="tf_NomMatiere" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ajouterCoursController">

   <children>
      <!-- Logo en haut à gauche -->
      <ImageView fitHeight="45.0" fitWidth="70.0" layoutX="10.0" layoutY="10.0">
         <image>
            <Image url="@images/1.png" />
         </image>
      </ImageView>

      <!-- Nom de la matière -->
      <Text layoutX="212.0" layoutY="67.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nom de la matière :" />
      <TextField fx:id="NomMatiere" layoutX="184.0" layoutY="85.0" prefWidth="200.0" />

      <!-- Date de début -->
      <Text layoutX="218.0" layoutY="135.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date de début :" />
      <DatePicker fx:id="DateDebut" layoutX="190.0" layoutY="152.0" prefWidth="200.0" />

      <!-- Date de fin -->
      <Text layoutX="234.0" layoutY="204.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date de fin :" />
      <DatePicker fx:id="DateFin" layoutX="190.0" layoutY="218.0" prefWidth="200.0" />

      <!-- Bouton "Ajouter cour" -->
      <Button fx:id="AjouterCour" layoutX="217.0" layoutY="267.0" mnemonicParsing="false" onAction="#AjouterCour" prefHeight="29.0" prefWidth="134.0">
         <style>
            -fx-background-color: #3498db;
            -fx-text-fill: white;
         </style>
         <effect>
            <DropShadow />
         </effect>
         Ajouter cour
      </Button>

      <!-- Bouton "Retour" -->
      <Button fx:id="Retour" layoutX="217.0" layoutY="326.0" mnemonicParsing="false" onAction="#Retour" prefHeight="29.0" prefWidth="134.0">
         <style>
            -fx-background-color: #3498db;
            -fx-text-fill: white;
         </style>
         <effect>
            <DropShadow />
         </effect>
         Retour
      </Button>
      <ImageView fitHeight="29.0" fitWidth="32.0" layoutX="184.0" layoutY="267.0">
         <image>
            <Image url="@images/add_icon.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="35.0" fitWidth="32.0" layoutX="184.0" layoutY="323.0">
         <image>
            <Image url="@images/back_icon.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
