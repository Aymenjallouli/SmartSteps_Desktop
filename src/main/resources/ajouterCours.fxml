<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="tf_NomMatiere" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #3b5998, #1B365D);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ajouterCoursController">

   <children>
      <!-- Logo en haut à gauche -->
      <ImageView fitHeight="45.0" fitWidth="70.0" layoutX="10.0" layoutY="10.0">
         <image>
            <Image url="@images/1.png" />
         </image>
      </ImageView>

      <!-- Nom de la matière -->
      <Text fill="white" layoutX="62.0" layoutY="109.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nom de la matière " />
      <TextField fx:id="NomMatiere" layoutX="233.0" layoutY="92.0" prefHeight="25.0" prefWidth="200.0" />

      <!-- Date de début -->
      <Text fill="white" layoutX="62.0" layoutY="147.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date de début " />
      <DatePicker fx:id="DateDebut" layoutX="233.0" layoutY="142.0" prefWidth="200.0" />

      <!-- Date de fin -->
      <Text fill="white" layoutX="62.0" layoutY="197.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date de fin " />
      <DatePicker fx:id="DateFin" layoutX="233.0" layoutY="192.0" prefWidth="200.0" />

      <!-- Bouton "Ajouter cours" -->
      <Button fx:id="AjouterCour" layoutX="356.0" layoutY="272.0" mnemonicParsing="false" onAction="#AjouterCour" prefHeight="30.0" prefWidth="169.0" style="-fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF); -fx-text-fill: #1B365D;">
      <style>
            -fx-background-color: linear-gradient(to bottom, #5a88c1, #1f3b63);
            -fx-text-fill: white;
         </style>
         <effect>
            <DropShadow />
         </effect>
         Ajouter cours
      </Button>

      <!-- Bouton "Retour" -->
      <Button fx:id="Retour" layoutX="157.0" layoutY="272.0" mnemonicParsing="false" onAction="#Retour" prefHeight="30.0" prefWidth="169.0" style="-fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF); -fx-text-fill: #1B365D;">
      <style>
            -fx-background-color: linear-gradient(to bottom, #5a88c1, #1f3b63);
            -fx-text-fill: white;
         </style>
         <effect>
            <DropShadow />
         </effect>
         Retour
      </Button>
      <!-- Icône "Ajouter cours" -->
      <ImageView fitHeight="29.0" fitWidth="32.0" layoutX="356.0" layoutY="273.0">
         <image>
            <Image url="@images/add_icon.png" />
         </image>
      </ImageView>

      <!-- Icône "Retour" -->
      <ImageView fitHeight="30.0" fitWidth="32.0" layoutX="155.0" layoutY="273.0">
         <image>
            <Image url="@images/back_icon.png" />
         </image>
      </ImageView>

      </children>
</AnchorPane>
