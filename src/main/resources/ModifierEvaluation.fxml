<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierEvaluationController">
   <children>
      <!-- Logo -->
      <ImageView fitHeight="40.0" fitWidth="79.0" layoutX="50.0" layoutY="20.0">
         <image>
            <Image url="@images/1.png" />
         </image>
      </ImageView>

      <!-- Titre -->
      <Text layoutX="158.0" layoutY="71.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Modifier Evaluation" textAlignment="CENTER" wrappingWidth="312.39996337890625">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Text>

      <!-- Champ NOM_MATIERE -->
      <TextField fx:id="TITRE" layoutX="238.0" layoutY="177.0" prefHeight="26.0" prefWidth="212.0" promptText="titre">
         <effect>
            <DropShadow color="#00000066" radius="5" spread="0.5" />
         </effect>
      </TextField>

      <!-- Date de début -->
      <DatePicker fx:id="Date_limite" layoutX="238.0" layoutY="232.0" prefHeight="25.0" prefWidth="212.0" />

      <!-- Libellé DATE_DEBUT -->
      <Text layoutX="150.0" layoutY="249.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date limite" wrappingWidth="80.0">
         <effect>
            <DropShadow color="#00000066" radius="5" spread="0.5" />
         </effect>
      </Text>

      <!-- Libellé DATE_FIN -->
      <Text layoutX="150.0" layoutY="304.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Durée" wrappingWidth="113.0">
         <effect>
            <DropShadow color="#00000066" radius="5" spread="0.5" />
         </effect>
      </Text>

      <!-- Bouton Modifier -->
      <Button fx:id="Modifier" layoutX="214.0" layoutY="356.0" mnemonicParsing="false" onAction="#ModifierEvaluation" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-text-fill: white;" text="Modifier">
         <effect>
            <DropShadow color="#00000066" radius="5" spread="0.5" />
         </effect>
      </Button>

      <!-- Bouton Retour -->
      <Button fx:id="Retour" layoutX="314.0" layoutY="356.0" mnemonicParsing="false" onAction="#Retour" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-text-fill: white;" text="Retour">
         <effect>
            <DropShadow color="#00000066" radius="5" spread="0.5" />
         </effect>
      </Button>
      <TextField fx:id="Duree" layoutX="238.0" layoutY="286.0" prefHeight="26.0" prefWidth="130.0" promptText="Durée">
         <effect>
            <DropShadow color="#00000066" radius="5" spread="0.5" />
         </effect>
      </TextField>
      <Text layoutX="150.0" layoutY="195.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Titre" wrappingWidth="80.0">
         <effect>
            <DropShadow color="#00000066" radius="5" spread="0.5" />
         </effect>
      </Text>
   </children>
</AnchorPane>
