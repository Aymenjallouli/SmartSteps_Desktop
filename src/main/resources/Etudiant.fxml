<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AfficherCourEtudiantController">
    <children>
        <!-- Logo -->
        <ImageView fitHeight="65.0" fitWidth="108.0" layoutX="14.0" layoutY="14.0">
            <image>
                <Image url="@images/1.png" />
            </image>
        </ImageView>

        <VBox layoutX="31.0" layoutY="21.0" spacing="10.0">
            <children>
                <HBox spacing="10.0" />
                <HBox spacing="10.0" />
            </children>
        </VBox>

        <!-- Ajout des titres de colonne -->
        <Text layoutX="7.0" layoutY="105.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nom Matière" />
        <Text layoutX="83.0" layoutY="106.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date Début" />
        <Text layoutX="165.0" layoutY="106.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date Fin" />

        <TextField fx:id="searchField" layoutX="261.0" layoutY="77.0" prefHeight="33.0" prefWidth="160.0" promptText="Recherche par Nom-matière" />

        <ListView fx:id="listcour" layoutY="122.0" prefHeight="200.0" prefWidth="600.0" />

        <Text layoutX="209.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="LISTE DES COURS" wrappingWidth="198.0">
            <font>
                <Font size="24.0" />
            </font>
        </Text>

        <!-- Boutons d'action -->
        <Button fx:id="Retour" layoutX="8.0" layoutY="345.0" onAction="#Retour" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-text-fill: white; -fx-padding: 8px 16px;" text="Retour" />
        <Button layoutX="473.0" layoutY="345.0" onAction="#trierParMatiere" prefHeight="33.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-text-fill: white; -fx-padding: 8px 16px;" text="Trier par matière" />
        <Button fx:id="AfficherUnite" layoutX="355.0" layoutY="345.0" onAction="#AfficherUnite" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-text-fill: white; -fx-padding: 8px 16px;" text="Afficher Unite" />
        <Button fx:id="rechercherParMatiere" layoutX="444.0" layoutY="76.0" onAction="#rechercherParMatiere" prefHeight="33.0" prefWidth="143.0" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-text-fill: white; -fx-padding: 8px 16px;" text="Rechercher" />
    </children>
</AnchorPane>
